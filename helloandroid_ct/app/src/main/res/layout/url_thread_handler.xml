<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".helloandroid_ct"
	android:background="#977fbee8">

    <Button android:id="@+id/GetServerData" 
    	android:text="#### Connect ####"
    	android:cursorVisible="true"
    	android:clickable="true"
		android:layout_width="300dp"
		android:layout_height="wrap_content"  
		android:layout_gravity="center_horizontal"
		android:layout_below="@+id/editText"
		android:background="#f14351f3"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:textSize="18dp" />

	<TextView
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:text=" Enter URL"
		android:id="@+id/textView2"
		android:elegantTextHeight="false"
		android:textSize="13dp"
		android:layout_marginTop="10dp"
		android:editable="false"
		android:layout_alignParentTop="true"
		android:textAlignment="center"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true" />

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="30dp"
		android:id="@+id/editText"
		android:autoText="false"
		android:background="#c7d8ec"
		android:layout_below="@+id/textView2"
		android:textColor="#0066fe"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		style="@style/editText"
		android:textSize="15dp" />


	<EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/editText2"
		android:layout_alignParentBottom="true"
		android:layout_below="@+id/GetServerData"
		android:background="#006075fa"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true" />

	<WebView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/webView"
		android:layout_below="@+id/GetServerData"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true" />

</RelativeLayout>